<!DOCTYPE html>
<html lang="en">

<head>
  <title>User Details</title>
  <link rel="stylesheet" href="/stylesheets/output.css" />
</head>

<body class="bg-gray-800 min-h-screen">

  <nav class="bg-white shadow-md px-6 py-4 flex items-center justify-between">
    <div>
      <a href="/"
        class="text-white bg-gray-800 hover:bg-gray-700 font-medium px-4 py-2 rounded-md transition duration-300">
        Home
      </a>

      <a href="/admin"
        class="text-white bg-gray-800 hover:bg-gray-700 font-medium px-4 py-2 ml-3 rounded-md transition duration-300">
        Admin
      </a>

      <a href="/logout"
        class="text-white bg-gray-800 hover:bg-gray-700 font-medium px-4 py-2 ml-3 rounded-md transition duration-300">
        Logout
      </a>
    </div>
  </nav>

  <div>
    <h1 class="text-2xl text-white text-center font-bold my-4">All Registered users</h1>
  </div>

  <div class="overflow-x-auto m-4">
    <table class="w-full bg-white rounded-lg shadow-md overflow-hidden text-sm text-left">
      <thead class="bg-red-700 text-white text-sm uppercase tracking-wider">
        <tr>
          <th class="px-4 py-3">#</th>
          <th class="px-4 py-3">Name</th>
          <th class="px-4 py-3">Phone</th>
          <th class="px-4 py-3">Address</th>
          <th class="px-4 py-3">DOB</th>
          <th class="px-4 py-3">10th</th>
          <th class="px-4 py-3">12th</th>
          <th class="px-4 py-3">Graduation</th>
          <th class="px-4 py-3">Postgraduation</th>
          <th class="px-4 py-3">Actions</th>
        </tr>
      </thead>

      <tbody>
        <% registration.forEach(function (registration, index) { %>
          <tr class="border-t hover:bg-gray-50">
            <td class="px-4 py-2">
              <%= index + 1 %>
            </td>
            <td class="px-4 py-2">
              <%= registration.name %>
            </td>
            <td class="px-4 py-2">
              <%= registration.phone %>
            </td>
            <td class="px-4 py-2">
              <%= registration.address %>
            </td>
            <td class="px-4 py-2">
              <%= new Date(registration.dob).toLocaleDateString() %>
            </td>

            <td class="px-4 py-2">
              <%= registration.education?.tenth?.year || "-" %> -
                <%= registration.education?.tenth?.percentage || "-" %>%
            </td>

            <td class="px-4 py-2">
              <%= registration.education?.twelth?.year || "-" %> -
                <%= registration.education?.twelth?.percentage || "-" %>%
            </td>

            <td class="px-4 py-2">
              <%= registration.education?.graduation?.year || "-" %> -
                <%= registration.education?.graduation?.percentage || "-" %>%
            </td>

            <td class="px-4 py-2">
              <%= registration.education?.postgraduation?.year || "-" %> -
                <%= registration.education?.postgraduation?.percentage || "-" %>%
            </td>

            <td class="px-4 py-2 flex space-x-2">
              <a href="/edit/<%= registration._id %>"
                class="bg-blue-500 text-white px-3 py-1 rounded hover:bg-blue-600">Edit</a>
              <a href="/delete/<%= registration._id %>"
                class="bg-red-500 text-white px-3 py-1 rounded hover:bg-red-600">Delete</a>
            </td>
          </tr>
          <% }) %>
      </tbody>

    </table>
  </div>
</body>

</html>